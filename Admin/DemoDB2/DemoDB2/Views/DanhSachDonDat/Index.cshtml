@model IEnumerable<DemoDB2.Models.CHITIETDONDAT>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Danh sách đơn đặt</h1>
    <p class="mb-4">
    </p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Thông tin đơn đặt</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Ngày Đặt</th>
                            <th>Tiền Cọc</th>
                            <th>Tiền Trả</th>
                            <th>Tên Khách</th>
                            <th>Mô Tả CT</th>
                            <th>Giá</th>
                            <th>Số Lượng</th>
                            <th>Mã Đặt Xe</th>
                            <th>Tên Xe</th>
                            <th>Chức Năng</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Ngày Đặt</th>
                            <th>Tiền Cọc</th>
                            <th>Tiền Trả</th>
                            <th>Tên Khách</th>
                            <th>Mô Tả CT</th>
                            <th>Giá</th>
                            <th>Số Lượng</th>
                            <th>Mã Đặt Xe</th>
                            <th>Tên Xe</th>
                            <th>Chức Năng</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.DONDATXE.NGAYDAT)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DONDATXE.TIENCOC)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DONDATXE.TIENTRA)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DONDATXE.KHACHHANG.TENKHACH)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MOTACT)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GIA)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SOLUONG)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DONDATXE.MADATXE)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.XE.TENXE)
                            </td>
                            <td>
                                @Html.ActionLink("Sửa", "Edit", new { id = item.MACTDONDAT }) |
                                @Html.ActionLink("Chi tiết", "Details", new { id = item.MACTDONDAT }) |
                                @Html.ActionLink("Xóa", "Delete", new { id = item.MACTDONDAT })
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->

</div>
<!-- End of Main Content -->
@section Scripts{
    <!-- Bootstrap core JavaScript-->
    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/vendor/bootstrap/~/Scripts/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Content/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Scripts/js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="~/Content/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Content/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/Scripts/js/demo/datatables-demo.js"></script>
}
